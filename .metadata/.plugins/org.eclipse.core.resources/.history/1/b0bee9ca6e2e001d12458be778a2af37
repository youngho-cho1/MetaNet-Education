package app;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;


@SuppressWarnings("serial")
public class BankApp_Main extends JFrame {
	BankApp_Main() {
		setTitle("Main");
		createMenu();
		setBounds(200, 200, 400, 250);
		setVisible(true);
	}
	void createMenu() {
		JMenuBar mb = new JMenuBar();
		JMenu screenMenu = new JMenu("종료");
		
//		screenMenu.add(new JMenuItem("출금"));
//		screenMenu.add(new JMenuItem("조회"));
//		screenMenu.add(new JMenuItem("로그아웃"));
//		screenMenu.addSeparator();
//		screenMenu.add(new JMenuItem("종료"));
		
		mb.add(new JMenu("예금"));
		mb.add(new JMenu("출금"));
		mb.add(new JMenu("이체")); // 맨 마지막에
		mb.add(new JMenu("조회"));
		mb.add(screenMenu);
		screenMenu.add(new JMenuItem("로그아웃"));
		screenMenu.add(new JMenuItem("종료"));
		setJMenuBar(mb);
		
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new BankApp_Main();
	}

}
